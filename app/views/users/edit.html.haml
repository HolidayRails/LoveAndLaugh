.row
  .large-9.columns
    %h1 Edit User Profile
    = simple_form_for @user, :validate => true, :html => {:multipart => true} do |f|
      = f.input :name
      = f.input :email
      - if current_user.admin?
        = f.input :confirmed
      = f.submit 'Save Changes', :class => 'button'
    = link_to t('views.users.edit.delete_account'), user_registration_path, :method => :delete,
        :confirm => 'Are you sure you want to destroy your account?', :class => "close"
